<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="vertical"
        android:layout_weight="1"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_gravity="top"
            android:layout_marginTop="@dimen/cardview_compat_inset_shadow"
            android:background="@color/item_green"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:scaleType="fitStart"
            android:src="@mipmap/victory"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:orientation="vertical"
            android:layout_weight="1"
            >

            <ImageView
                android:id="@+id/player0"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="@color/main_red"
                android:scaleType="centerCrop" />
            <ImageView
                android:id="@+id/player1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="@color/main_blue_light"
                android:scaleType="centerCrop" />
            <ImageView
                android:id="@+id/player2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="@color/main_black"
                android:scaleType="centerCrop" />
            <ImageView
                android:id="@+id/player3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="@color/item_green"
                android:scaleType="centerCrop" />
            <ImageView
                android:id="@+id/player4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="@color/main_red"
                android:scaleType="centerCrop" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="vertical"
        android:layout_weight="1"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_gravity="top"
            android:layout_marginTop="@dimen/cardview_compat_inset_shadow"
            android:background="@color/main_red_grey"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:scaleType="fitStart"
            android:src="@mipmap/defeat"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:orientation="vertical"
            android:layout_weight="1"
            >

            <ImageView
                android:id="@+id/player5"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="@color/main_red"
                android:scaleType="centerCrop" />
            <ImageView
                android:id="@+id/player6"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="@color/main_blue_light"
                android:scaleType="centerCrop" />
            <ImageView
                android:id="@+id/player7"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="@color/main_black"
                android:scaleType="centerCrop" />
            <ImageView
                android:id="@+id/player8"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="@color/item_green"
                android:scaleType="centerCrop" />
            <ImageView
                android:id="@+id/player9"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="@color/main_red"
                android:scaleType="centerCrop" />
        </LinearLayout>

    </LinearLayout>





</LinearLayout>